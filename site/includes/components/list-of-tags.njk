      <a class="font-normal {% if item == "Case Study" %}bg-yellow-500 hover:bg-yellow-400 px-2 py-1 rounded text-black hover:no-underline{% else %}text-red-400{% endif %} mr-1 md:mr-2" href="/category/{{ item }}/">{{ item }}</a>
    {%- endif -%}
  {% endfor %}
{% endif %}