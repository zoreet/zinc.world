{% include "components/logo.njk" %}

<main id="main" class="main w-full max-w-6xl mx-auto px-6 flex flex-1 flex-col pb-10 lg:pb-20 focus:outline-none" tabindex="-1">

    <div class="tablet:grid grid-cols-3 grid-rows-1 gap-16">
        <div class="col-start-1 col-end-3">
            <div class="content">

                <h2 class="text-gray-200 text-xl font-normal uppercase border-b border-gray-700 pb-4 mb-4">Latests posts</h2>

                {% for post in collections.blog %}
                    <article class="mb-12">
                        <div class="text-gray-500 mb-1">

                            {% set tags = post.data.tags %}
                            {% include "components/list-of-tags.njk" %}
                        </div>
                        <h1 class="mt-1 mb-2 text-3xl">
                            <a class="text-white" href="{{ post.url }}">
                                {{ post.data.title }}
                            </a>
                        </h1>
                        <p class="tablet:text-2xl tablet:leading-normal">{{ post.data.excerpt }}
                            <p></article>
                        {% endfor %}

                    </div>
                </div>
                <div class="col-start-3">
                    {% include "components/sidebar.njk" %}
                </div>
            </div>

        </main>